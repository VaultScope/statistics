# ===========================================
# VaultScope Statistics - Environment Configuration
# ===========================================

# Copy this file to .env and configure your values
# For production deployment, ensure all sensitive values are changed

# ===========================================
# Server Configuration
# ===========================================
PORT=4000
HOST=localhost
NODE_ENV=development
SERVER_ID=vaultscope-1
TRUST_PROXY=loopback

# ===========================================
# Database Configuration
# ===========================================
# SQLite database path (leave empty to use defaults)
DATABASE_URL=
# Pool settings for multi-connection scenarios
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
# Enable WAL mode for better concurrency (true/false)
DB_WAL_MODE=true

# ===========================================
# Security Configuration
# ===========================================
# IMPORTANT: Change these secrets in production!
SESSION_SECRET=change-this-secret-in-production
JWT_SECRET=change-this-jwt-secret
# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=10
# CORS origin (use specific domains in production)
CORS_ORIGIN=*

# ===========================================
# Rate Limiting
# ===========================================
# Rate limit window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
# Cache TTL in seconds (5 minutes default)
CACHE_TTL=300
CACHE_PREFIX=vaultscope:

# ===========================================
# InfluxDB Configuration (Optional)
# ===========================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=vaultscope
INFLUXDB_BUCKET=metrics
INFLUXDB_RETENTION_DAYS=30

# ===========================================
# Monitoring Configuration
# ===========================================
# Alert check interval in milliseconds
ALERT_CHECK_INTERVAL_MS=30000
# Metrics collection interval
METRICS_INTERVAL_MS=5000
# Memory leak detection interval
MEMORY_LEAK_CHECK_INTERVAL_MS=60000
# Network packet log limits
MAX_PACKET_LOGS=1000
MAX_ALL_PACKET_LOGS=100000
# Performance stats history size
PERF_STATS_HISTORY_SIZE=100

# ===========================================
# Email Configuration (For Notifications)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@vaultscope.com

# ===========================================
# Agent Configuration
# ===========================================
AGENT_SERVER_URL=http://localhost:4000
AGENT_API_KEY=
# Data collection intervals
AGENT_COLLECT_INTERVAL_MS=60000
AGENT_SEND_INTERVAL_MS=5000
AGENT_MAX_QUEUE_SIZE=1000

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features (true/false)
ENABLE_DOCKER=true
ENABLE_KUBERNETES=false
ENABLE_NETWORK_SNIFFER=true
ENABLE_POWER_COMMANDS=true
ENABLE_COMPRESSION=true
ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_COLORIZE=true

# ===========================================
# Production-Specific Settings
# ===========================================
# Example production values (uncomment and modify as needed):
# NODE_ENV=production
# DATABASE_URL=/var/www/vaultscope-statistics/database.db
# SESSION_SECRET=your-very-secure-session-secret-here
# JWT_SECRET=your-very-secure-jwt-secret-here
# CORS_ORIGIN=https://yourdomain.com
# RATE_LIMIT_MAX_REQUESTS=50
# ENABLE_POWER_COMMANDS=false