# Server Configuration
PORT=4000
HOST=localhost
NODE_ENV=development
SERVER_ID=vaultscope-1
TRUST_PROXY=loopback

# Database Configuration
DATABASE_URL=./database.db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_WAL_MODE=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300
CACHE_PREFIX=vaultscope:

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-token-here
INFLUXDB_ORG=vaultscope
INFLUXDB_BUCKET=metrics
INFLUXDB_RETENTION_DAYS=30

# Security Configuration
SESSION_SECRET=change-this-secret-in-production
JWT_SECRET=change-this-jwt-secret
BCRYPT_ROUNDS=10
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ALERT_CHECK_INTERVAL_MS=30000
METRICS_INTERVAL_MS=5000
MEMORY_LEAK_CHECK_INTERVAL_MS=60000
MAX_PACKET_LOGS=1000
MAX_ALL_PACKET_LOGS=100000
MAX_NETWORK_STATS_ENTRIES=100
PERF_STATS_HISTORY_SIZE=100

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@vaultscope.com

# Agent Configuration
AGENT_SERVER_URL=http://localhost:4000
AGENT_API_KEY=
AGENT_COLLECT_INTERVAL_MS=60000
AGENT_SEND_INTERVAL_MS=5000
AGENT_MAX_QUEUE_SIZE=1000

# Feature Flags
ENABLE_DOCKER=true
ENABLE_KUBERNETES=false
ENABLE_NETWORK_SNIFFER=true
ENABLE_POWER_COMMANDS=true
ENABLE_COMPRESSION=true
ENABLE_PERFORMANCE_MONITORING=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_COLORIZE=true