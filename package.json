{
  "name": "vaultscope-statistics",
  "version": "2.0.0",
  "description": "VaultScope Statistics - System Monitoring Suite",
  "private": true,
  "bin": {
    "vss": "./cli.js"
  },
  "scripts": {
    "install:all": "npm run install:server && npm run install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "npm run server:dev",
    "client": "npm run client:dev",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run server:start\" \"npm run client:start\"",
    "server:start": "cd server && npm start",
    "client:start": "cd client && npm start",
    "server:prod": "npm run server:start",
    "client:prod": "npm run client:start",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/.next",
    "setup": "npm run install:all"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vaultscope-statistics.git"
  },
  "keywords": [
    "monitoring",
    "statistics",
    "dashboard",
    "system-metrics",
    "nodejs",
    "nextjs"
  ],
  "author": "VaultScope",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}